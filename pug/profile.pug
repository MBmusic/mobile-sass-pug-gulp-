doctype html
html(lang="ru-RU")
    head
        include head/head.pug
    body
        include layouts/left_sidebar.pug
        include layouts/right_sidebar.pug
        include layouts/page_preloader.pug

        #wrapper
            .header
                include layouts/header.pug
            section.header-substrate.header-substrate--linefence
                img.substrate-img--profile(src="img/banner_profile.png")
                .linefence
            .contentpage.contentpage--graybg
                .contentpage__content.contentpage--else
                    h1.title.title--profile Профиль
                    .profile-id ID #334560

                    .profile
                        .profile__section
                           h2.section-heading Личные данные
                           .label
                                label Ваше имя
                                input(type="text" placeholder="имя")
                           .label
                                label Ваша фамилия
                                input(type="text" placeholder="фамилия")
                           .label
                                label Псевдоним
                                input(type="text" placeholder="Псевдоним")
                           .label
                               label Дата рождения
                               .uk-grid
                                   .uk-width-1-3
                                        select
                                            option(value="" disabled selected) ДД
                                   .uk-width-1-3
                                       select
                                           option(value="" disabled selected) MM
                                   .uk-width-1-3
                                        select
                                            option(value="" disabled selected) ГГГГ
                           .label
                                label Ваша валюта
                                input(type="text" disabled value="RUB")
                           .label.label--radio
                                | Ваш пол:
                                input(type="radio")
                                label(for="") М
                                input(type="radio")
                                label(for="") Ж
                           .label.btn--profile
                                .btn.btn--green Сохранить

                        .profile__section
                            h2.section-heading Контакты
                            .label
                                select
                                    option(value="" disabled selected) Выберите страну
                            .label
                                label Ваш город
                                input(type="text" placeholder="город")
                            .label
                                label Адрес
                                input(type="text" placeholder="адрес")

                            .label.btn--profile
                                .btn.btn--green Сохранить

                        .profile__section.profile__section--red
                            h2.section-heading Подтверждение почты
                            .label.profile-email
                                label Ваша почта
                                input(type="email" value="gambler@gmail.com")
                                span.email-edit-btn
                            .uk-text-center
                                a.link.text-blue(href="#") Отправить код
                            .label
                                label Введите код подтверждения
                                input(type="text" placeholder="----" class="email-confirm-input" maxlength="4" size="4")
                            .uk-text-center
                                a.link.text-blue(href="#") Подтвердить

                        .profile__section.profile__section--green
                            h2.section-heading Телефон подтвержден
                            .label
                                label Номер телефона
                                input(type="text" disabled value="+ 8 (067) 452 36 89")
                        .profile__section
                            h2.section-heading Изменение пароля
                            .label
                                label Ваш старый пароль
                                input(type="text" placeholder="старый пароль")
                            .label
                                label Ваш новый пароль
                                input(type="text" placeholder="новый пароль")
                            .label
                                label Подтвердите новый пароль
                                input(type="text" placeholder="новый пароль")

                            .label.btn--profile
                                .btn.btn--green Сохранить



            include layouts/footer.pug
            include layouts/modal.pug